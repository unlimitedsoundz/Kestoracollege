<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Add trailing slash if the requested path corresponds to a real directory
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.*[^/])$ /$1/ [L,R=301]

  # Use index.html as the default index document
  DirectoryIndex index.html

  # Handle 404 Page Not Found mapping to Next.js 404.html
  ErrorDocument 404 /404.html

</IfModule>
